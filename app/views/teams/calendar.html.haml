  - for date, items in @calendar
    %h2
      = date
    %ul
      - for item in items
        %li{"data-channel"=>item.channel_name, "data-created"=>item.created_at, "data-channel"=>item.channel_name, "data-creator"=>"@#{item.user_name}", "data-id"=>item.id}
          %span.list-head
            â—
          - if item.created_at == item.updated_at
            = item.text
          - else
            %strike
              = item.text
          %span.channel
            = "##{item.channel_name}"